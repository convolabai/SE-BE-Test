{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "#root/*": ["./*"],
      "#src/*": ["./src/*"],
      "#schemas/*": ["./schemas/*"],
      "#question-1/*": ["./src/question-1/*"],
      "#question-2/*": ["./src/question-2/*"],
      "#tests/*": ["./tests/*"],
      "#tests-data/*": ["./tests/data/*"],
      "#tests-integration/*": ["./tests/unit/*"],
      "#tests-unit/*": ["./tests/integration/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage", ".yarn", ".git"],
  "include": ["src/**/*", "tests/**/*", "schemas/*", "config.js"]
}
