{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "baseUrl": "./",
    "paths": {
      "#root/*": ["./*"],
      "#src/*": ["./src/*"],
      "#schemas/*": ["./schemas/*"],
      "#tests/*": ["./tests/*"],
      "#tests-data/*": ["./tests/data/*"],
      "#tests-helpers": ["./tests/helpers/*"],
      "#input/*": ["./tests/data/input/*"],
      "#output/*": ["./tests/data/output/*"]
    }
  },
  "exclude": ["node_modules", "dist", "coverage", ".yarn", ".git"],
  "include": ["src/**/*", "tests/**/*", "schemas/*", "config.js"]
}
